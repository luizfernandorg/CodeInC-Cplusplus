{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++",
            "type": "shell",
            "command": "g++ -g -O3 -std=c++17 -Wall \"${fileDirname}\\*.cpp\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }        
    ]
}